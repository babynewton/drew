ARCHIVE=libengine.a
OBJS=gtk/gtk_engine.o\
	gtk/gtk_widget.o\
	gtk/gtk_window.o\
	gtk/gtk_button.o\
	gtk/gtk_box.o\
	gtk/gtk_hseparator.o\
	gtk/gtk_vseparator.o\
	gtk/gtk_label.o\
	gtk/gtk_factory.o\
	dml/dml.o\
	dml/application_parser.o\
	dml/window_parser.o\
	dml/box_parser.o\
	dml/button_parser.o\
	dml/label_parser.o\
	dml/separator_parser.o

CXXFLAGS=-g -O2 -Wall -I. -I.. -I../script -I../dml -I../utility @ui_incs@

all: $(OBJS)
