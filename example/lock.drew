#!/usr/local/bin/drew

version:1.0

window{
	border:10
	_before_destroy{
		log.verbose("delete-devent occurred")
		button = gui.find("button")
		if button.label() == "lock" then
			return true
		else
			return false
		end
	}
	_on_destroy{
		log.debug("quit")
		gui.quit()
	}
	button{
		id:"button"
		label:"lock"
		_on_click{
			if this.label() == "lock" then
				this.label("unlock")
				cout.print("locked")
			else
				this.label("lock")
				cout.print("unlocked")
			end
		}
	}
}
