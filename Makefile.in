all clean debug:
	$(MAKE) -C utility $@
	$(MAKE) -C dml $@
	$(MAKE) -C script $@
	$(MAKE) -C engine $@
	$(MAKE) -C runner $@

CACHE_FILES=$(shell find . -type f -name "*~")
MAKE_FILES=$(shell find . -type f -name "Makefile")
distclean: clean
	if [ -n "$(CACHE_FILES)" ]; then rm $(CACHE_FILES); fi
	rm $(MAKE_FILES)
	rm -rf @pkg_root@
	rm -f toolbox/debian/control
	rm -f @debian_package@

install install2pkg:
	rm -rf @pkg_root@
	mkdir -m 755 @pkg_root@
	$(MAKE) -C runner $@

deb: all install2pkg @debian_package@

@debian_package@: 
	toolbox/mkdeb $@ @pkg_root@

