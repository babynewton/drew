all clean: @script_target@ @ui_target@
	$(MAKE) -C utility $@ -j@cores@
	$(MAKE) -C dml $@ -j@cores@
	$(MAKE) -C script $@ -j@cores@
	$(MAKE) -C engine $@ -j@cores@
	$(MAKE) -C runner $@ -j@cores@
	$(MAKE) -C toolbox/@pkg_format@ $@

lua:
	$(MAKE) -C dependents/lua $@ -j@cores@

luajit:
	$(MAKE) -C dependents/luajit $@ -j@cores@

gtk:
	$(MAKE) -C dependents/gtk $@ -j@cores@

distclean: clean
	$(MAKE) -C toolbox/@pkg_format@ $@
	find . -name "*~" -exec rm {} \;
	find . -name Makefile -exec rm {} \;
	rm -f config.h

install uninstall: @script_target@ @ui_target@
	$(MAKE) -C runner $@
	$(MAKE) -C example $@

package:
	$(MAKE) -C toolbox/@pkg_format@ $@



