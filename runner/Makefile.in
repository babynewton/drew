PROG=drew
OBJS=main.o argument.o

CXXFLAGS=-g -O2 -Wall -I../engine -I../dml -I../script -I../utility

all: debug
	chmod 755 $(PROG)
	strip -g -S -d --strip-unneeded $(PROG)

debug: $(OBJS)
	$(CXX) -o $(PROG) $(OBJS) -L../engine -lengine -L../dml -ldml -L../utility -lutil -L../script -lgui @script_libs@ @ui_libs@

install:
	cp $(PROG) @root@@bin@

install2pkg:
	mkdir -p @pkg_root@@root@@bin@
	cp $(PROG) @pkg_root@@root@@bin@

clean:
	rm -f $(PROG) $(OBJS)
